{
    "include": ["src/**/*", "src/index.d.ts", "demo/**/*", "demo/custom.d.ts"],
    "exclude": ["node_modules", "build", "dist", "example", "demo", "rollup.config.js"],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "declaration": false,
        "outDir": ".",
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "DOM.Iterable", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "typeRoots": ["./custom.d.ts", "./node_modules/@types"],
        "allowSyntheticDefaultImports": true
    }
}
